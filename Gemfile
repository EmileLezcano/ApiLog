source 'https://rubygems.org' # específica la página desde donde se deben descargar las gemas.

gem 'sinatra' # Con sinatra podremos iniciar un servidor web que escuha solicitudes HTTP en un puerto específico (por defecto, el puerto 4567)
gem 'json' # Para enviar y recibir archivos en formato JSON
gem 'pg' # para poder conectarnos y trabajar con PostgreSQL 
gem 'activerecord', require: 'active_record' # facilita la interacción con bases de datos relacionales utilizando objetos Ruby.
gem 'sinatra-activerecord' # Integra ActiveRecord con Sinatra

# Ejecutar 'bundle install' en la terminal para agregar todas las gemas 
